---
import Navigation from '../components/Navigation.astro'
import { SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
---

<header>
  <SkipLink />
  <Navigation>
    <li class="menu-item">
      <li class="menu-item type-icon">
        <a href="https://www.notion.so/bayernmuller/1e457d94cb8c80cd8228dd730d0c51c7?v=1e457d94cb8c80c8a415000c73d8d31c" title="Go to the GitHub page">
          <Icon name="ion:bookmarks" />
        </a>
      </li>
    <li class="menu-item type-icon">
      <a href="https://github.com/markteekman/accessible-astro-starter" title="Go to the GitHub page">
        <Icon name="ion:logo-github" />
      </a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [data-icon] {
        margin-top: -4px;
        width: 30px;
        height: auto;

        path {
          fill: var(--action-color);
        }
      }

      &:hover {
        [data-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
